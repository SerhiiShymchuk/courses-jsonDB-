<h1>Корзина</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Назва</th>
                    <th>Кількість</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" 
                        data-id="{{_id}}"
                        data-csrf="{{@root.csrf}}"
                        >Видалити</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p ><strong>Ціна: </strong><span class="price">{{price}}</span></p>
        <form action="/order" method="post">
            <button class="btn" type="submit">Замовити</button>
        </form>
    {{else}}
        <p>Кошик пустий</p>
    {{/if}}
</div>